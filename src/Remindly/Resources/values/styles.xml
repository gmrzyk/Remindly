<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#3F51B5</item> <!-- Ciemniejszy niebieski -->
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#3F51B5</item>
        <item name="android:statusBarColor">#303F9F</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#3F51B5</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- EditText style with border -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Card style for list items -->
    <style name="ListItemStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>